package firstParcialExercises.Parcial1;

/**
 *
 * @author Alejandro
 */
public class Circle {
    private double radius;//declaras atributos de la clase
    
    public Circle(){//constructor default
        this.radius=1.0;
    }
    public Circle(double radius){//constructor
        this.radius = radius;
    }
    public double getRadius(){//getters y setters del diagrama
        return this.radius;
    }
    public void setRadius (double radius ){
        this.radius = radius;
    }
    public double getArea (){//metodo que calcula el area
        return this.radius = this.radius *Math.PI;
        
    }
    public double getCircunference(){//metodo que calcula la circunferencia
        return this.radius*2*Math.PI;
    }
    @Override//maniupulacion de String
     public String toString(){
        return "Circle(radius="+this.radius+")";
    }
}
